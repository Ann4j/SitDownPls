  main.main
    section.hero
      .container
        .hero__content
          h2.hero__title Cкидка 15% на первую покупку
          button.hero__btn Получить!
    section.button
      .container
        .button__content
          button.btn Получить!
    section.special
      .container
        .special__content
          h3.special__title Специальные предложения
          .special__wrap
            each card in special
              article.special__offer.offer
                .offer__card
                  .offer__discount
                    p=card.discount
                  picture
                    source(srcset=require(`./img/special-${card.img}-1350.png`), media="(max-width: 1360px)")
                    img(src=require(`./img/special-${card.img}.png`), alt=`${card.title}`)
                  .offer__wrap
                    h4.offer__title !{card.title}
                    .offer__price.price
                      span.price__now=card.price1
                      span.price__initial=card.price2
                    button.offer__btn Купить
    section.rating
      .container
        .rating__content
          h3.rating__title Высокий рейтинг
          .rating__products
            each card in rating
              article.rating__product.product
                .product__card
                  span.product__star=card.star
                  img(src=require(`./img/rating-sofa-${card.img}.png`), alt=`${card.title}`)
                  .product__wrap
                    h4.product__title !{card.title}
                    p.product__price=card.price
                    button.product__btn Купить
    section.oxford
      .container
        .oxford__content
          h2.oxford__title
            span Оксфорд 1950
            | Новая коллекция изысканных кресел
          button.oxford__btn Ознакомиться
    section.button
      .container
        .button__content
          button.btn Ознакомиться
    section.top
      .container
        .top__content
          h3.top__title Топ категории
          .top__categories.categories
            each card in top
              atricle.categories__card
                button.categories__btn.categories__btn-mobile
                  include img/arrow.svg
                .categories__wrap
                  ul.categories__list
                    li.categories__item
                      p.categories__name=card.descr1
                    li.categories__item
                      p.categories__name=card.descr2
                    li.categories__item
                      p.categories__name=card.descr3
                  h4.categories__title=card.title
                  picture
                    source(srcset=require(`./img/categories-${card.img}-540.png`), media="(max-width: 570px)")
                    source(srcset=require(`./img/categories-${card.img}-760.png`), media="(max-width: 760px)")
                    source(srcset=require(`./img/categories-${card.img}-1350.png`), media="(max-width: 1360px)")
                    img(src=require(`./img/categories-${card.img}.png`), alt=`${card.title}`)
                  button.categories__btn В каталог
                    include img/arrow.svg
    section.useful
      .container
        .useful__content
        h3.useful__title Полезное
        .useful__articles.articles
          each card in useful
            article.articles__card
              .articles__wrap
                p.articles__descr=card.descr
                button.articles__btn Читать
    section.feedback
      .container
        .feedback__content
          .feedback__wrap
            h3.feedback__title Мы всегда вам рады!
            p.feedback__descr Безусловно, новая модель организационной деятельности в значительной степени обусловливает важность распределения внутренних резервов и ресурсов.
            form.feedback__form.form
              input.form__input(placeholder="Как вас зовут?")
              input.form__input(placeholder="Ваш телефон")
              input.form__input(placeholder="Ваш e-mail")
              button.form__btn Отправить
              .form__wrap
                input.form__chekbox(id="form__chekbox" type="checkbox")
                label.form__label(for="form__chekbox") Принимаю&nbsp;
                  a пользовательское соглашение
